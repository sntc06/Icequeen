<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 標題區 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/test_background" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="測驗結果"
            android:textSize="30dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >
    </LinearLayout>

    <!-- 分數區 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:text="Result:"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginRight="30dp"
            android:text="100%"
            android:textColor="#FF0000"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/tvScore"
            android:text="TIme:"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tvScore"
            android:layout_below="@+id/tv"
            android:text="00:10:12"
            android:textSize="26dp" />

    </RelativeLayout>

    <!-- 按鈕區 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <Button
            android:id="@+id/btnViewError"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_style"
            android:text="瀏覽錯誤單字"
            android:textColor="#4B4B4B"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_below="@+id/btnViewError"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_style"
            android:drawableLeft="@drawable/again_icon"
            android:text="再測一次"
            android:textColor="#4B4B4B"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnReselect"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_below="@+id/btnRetry"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_style"
            android:drawableLeft="@drawable/chapter_icon"
            android:text="回章節選擇"
            android:textColor="#4B4B4B"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="2" >

            <Button
                android:id="@+id/Button03"
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_style"
                android:text="瀏覽錯誤單字"
                android:textColor="#4B4B4B"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:layout_below="@+id/Button03"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_style"
                android:drawableLeft="@drawable/again_icon"
                android:text="再測一次"
                android:textColor="#4B4B4B"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:layout_below="@+id/Button01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_style"
                android:drawableLeft="@drawable/chapter_icon"
                android:text="回章節選擇"
                android:textColor="#4B4B4B"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="2" >

            <Button
                android:id="@+id/Button06"
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_style"
                android:text="瀏覽錯誤單字"
                android:textColor="#4B4B4B"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Button04"
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:layout_below="@+id/Button06"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_style"
                android:drawableLeft="@drawable/again_icon"
                android:text="再測一次"
                android:textColor="#4B4B4B"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Button05"
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:layout_below="@+id/Button04"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_style"
                android:drawableLeft="@drawable/chapter_icon"
                android:text="回章節選擇"
                android:textColor="#4B4B4B"
                android:textSize="20dp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>