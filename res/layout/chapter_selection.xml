    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
    <Button
            android:id="@+id/btnSelectMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btnSelectMid" />
        
        <Button
            android:id="@+id/btnSelectFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
