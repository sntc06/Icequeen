<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
	<!-- 書本資訊 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5" >
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/image02" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSelectedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Economics"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/tvSelectedAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="John Sloman" />

            <TextView
                android:id="@+id/tvSelectedVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="version 6" />
        </LinearLayout>
    </LinearLayout>

    <!-- 章節選擇 -->
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"  >
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 期中考 -->
        <CheckBox
            android:id="@+id/checkBoxMid"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:text="期中考"
            android:button="@drawable/checkbox" />

        <LinearLayout
            android:id="@+id/chapterLinearLayoutMid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/checkbox_background" >

        </LinearLayout>
        
        <!-- 期末考 -->
        <CheckBox
            android:id="@+id/checkBoxFinal"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:text="期末考" 
            android:button="@drawable/checkbox" />

        <LinearLayout
            android:id="@+id/chapterLinearLayoutFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/checkbox_background" >

        </LinearLayout>

    </LinearLayout>
    
    </ScrollView>

    
    <!-- 按鈕區 -->
    
    <RelativeLayout    
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"  >
        <Button
            android:id="@+id/btnConfirmChapter"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style"
            android:textColor="#4B4B4B"
            android:textSize="20dp" 
            android:gravity="center"
            android:text="確認選擇" />

    </RelativeLayout>

	    



</LinearLayout>